<Project>

  <!-- Conditionals -->
  <PropertyGroup>
    <IsTestProject>$(MSBuildProjectName.Contains('Tests'))</IsTestProject>
    <IsDebug>$(Configuration.StartsWith('Debug'))</IsDebug>
    <IsRelease>$(Configuration.StartsWith('Release'))</IsRelease>
  </PropertyGroup>

  <!-- Default properties -->
  <PropertyGroup>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <ApplicationIcon>..\docs\images\logo.ico</ApplicationIcon>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <MSBuildTreatWarningsAsErrors>true</MSBuildTreatWarningsAsErrors>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <!-- Documentation -->
  <PropertyGroup Condition=" '$(IsTestProject)' != 'true' ">
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <!-- SignAssembly -->
  <PropertyGroup Condition=" '$(IsRelease)' == 'true' and '$(IsTestProject)' != 'true' ">
    <SignAssembly>true</SignAssembly>
    <DelaySign>false</DelaySign>
    <AssemblyOriginatorKeyFile>..\docs\signassembly\SignStrong.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <!-- Optimize -->
  <Choose>
    <When Condition=" '$(IsDebug)' == 'true' ">
      <PropertyGroup>
        <DebugSymbols>true</DebugSymbols>
        <DefineConstants>$(DefineContants);DEBUG</DefineConstants>
        <Optimize>false</Optimize>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <Optimize>true</Optimize>
      </PropertyGroup>
    </Otherwise>
  </Choose>
  
  <!-- Analyzers -->
  <Choose>
    <When Condition=" '$(IsTestProject)' != 'true' ">
      <PropertyGroup>
        <CodeAnalysisRuleSet>..\docs\analyzers\CodeAnalysis.ruleset</CodeAnalysisRuleSet>
      </PropertyGroup>

      <ItemGroup>
        <PackageReference Include="Microsoft.VisualStudio.Threading.Analyzers" Version="16.4.33" PrivateAssets="All" />
        <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.9.8" IncludeAssets="Analyzers;Build" PrivateAssets="All" />
        <PackageReference Include="StyleCop.Analyzers" Version="1.1.118" IncludeAssets="Analyzers;Build" PrivateAssets="All" />
        <AdditionalFiles Include="..\docs\analyzers\stylecop.json">
          <Visible>false</Visible>
        </AdditionalFiles>
      </ItemGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <CodeAnalysisRuleSet>MinimumRecommendedRules.ruleset</CodeAnalysisRuleSet>
      </PropertyGroup>
    </Otherwise>
  </Choose>
    
</Project>